{
  "manifest_version": 2,
  "name": "DelayWebpage",
  "version": "2.0",
  "description": "Sets a delay to distracting websites to help you browse more mindfully",
  "icons": {
    "512": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["delay.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage"],
  "applications": {
    "gecko": {
      "id": "59d38c48-5403-4f6e-9e18-3873edf0dbdb"
    }
  }
}
